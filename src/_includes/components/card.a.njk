<a 
  aria-label="{{params.item.title}}"
  href="{{params.item.link}}"
  class="relative grid max-w-md grid-cols-1 col-span-3 mx-auto overflow-hidden transition bg-white rounded-lg gap-y-2 md:col-span-1 group hover:shadow-lg hover:-translate-y-2"
>
  {% picture params.item.image, params.item.title,
    "object-cover aspect-video rounded-lg group-hover:rounded-none",
    "400px"
  %}
  <h3 class="px-4 text-xl font-medium underline transition md:text-lg lg:text-xl text-epl decoration-transparent decoration-1 underline-offset-2 group-hover:text-black group-hover:decoration-black">{{params.item.title}}</h3>
  <p class="px-4 pb-4 text-sm">{{params.item.text}}</p>
  
</a>