layout: 'layouts/01.nav.njk'
---

<header class="relative pt-24 pb-16">
  {% svg "waves/wave-2.svg", "wave-bot fill-white" %}

  <div class="relative wrapper">

    <h1 class="text-white font-serif leading-tight text-4xl lg:text-6xl">{{ headline }}</h1>

    <a 
      href="/form/demo/" 
      class="
        inline-block my-16 
        px-5 py-2.5 
        text-black tracking-wide text-sm font-semibold
        bg-emerald-400 hover:bg-white
        rounded-full 
        ring-1 ring-white
        shadow-lg shadow-blue-800 hover:shadow-blue-500 
      ">
      View EdgePoint demos
    </a>

    <div class="grid sm:grid-cols-3 gap-8">

      <div class="bg-slate-300 shadow-lg p-4 font-serif text-base grid content-center rounded">
        <p class="story-quotation my-4">{{ quote}}</p>
      </div>
      
      <div class="bg-slate-300 shadow-lg p-4 grid gap-y-4 text-sm rounded">
        <ul>
        {% for category, data in stats %}
          <li class="font-bold uppercase text-slate-700">{{category}}</li>
          <li class="mb-4 last:mb-0">{{data}}</li>
        {% endfor %}
        </ul>
      </div>
      
      <div class="bg-slate-300 p-4 text-sm shadow-lg rounded">
        <p class="font-bold uppercase text-slate-700">Key Wins:</p>
        <ul class="grid gap-y-4">
          {% for item in wins %}
            <li>{{ item }}</li>
          {% endfor %}
        </ul>
      </div>
    
    </div>

  </div>
</header>



