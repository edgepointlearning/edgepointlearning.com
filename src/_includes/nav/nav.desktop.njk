<div class="sticky top-0 z-40 hidden w-full px-4 transition-all bg-white shadow-md md:block xl:px-0">

  <ul class="flex items-stretch h-16 max-w-5xl gap-8 mx-auto">

    {# epl logo #}
    <li class="flex items-center flex-auto">
      <a href="/" class="" title="Home">
        {% svg "logo--epl-e", "h-8 aspect-square mg:hidden fill-epl" %} 
        {% svg "logo--epl-horizontal", "w-full md:w-[200px] lg:w-[220px] aspect-[358/47] hidden mg:block" %}
      </a>
    </li>



    {# solutions megamenu #}
    <li class="flex items-center" x-data="{showChildren:false}" @click.away="showChildren=false">
      <a href="" class="nav-link" @click.prevent="showChildren=!showChildren">Solutions{% svg "menu--expand-down", "h-4 mt-0.5 aspect-square" %}</a>

      {# megamenu background #}
      <div
        class="absolute top-16 left-0 w-full h-screen bg-black/50 backdrop-blur-sm"
        x-cloak x-show="showChildren"
        @click.prevent="showChildren=!showChildren"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
      >
      </div>

      {# megamenu full-width bg #}
      <div
        class="absolute left-0 w-full max-w-full bg-white shadow-md top-16"
        x-cloak x-show="showChildren"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 -translate-y-3"
        x-transition:enter-end="opacity-100 translate-y-0"
      >
        {# megamenu wrapper container #}
        <div class="grid grid-rows-2 grid-cols-4 max-w-5xl px-2 pb-2 mx-auto divide-solid place-items-center">

          {# solutions loop #}
          {% for link in solutions %}
            {{ component('megamenu.vert', { link: link }) }}
          {% endfor %}

          {# solutions landing page #}
          <div class="row-span-full w-full p-3">
            <a href="/solutions/" aria-label="See all our solutions"
              class="
                flex flex-col justify-center
                w-full h-full py-4 px-1
                rounded-lg text-center 
                group transition
                bg-blue-50 ring-1 ring-blue-200 ring-offset-4 ring-offset-white 
                hover:bg-blue-100 hover:ring-epl-light hover:scale-105
            ">
            <p class="font-extrabold text-epl group-hover:text-slate-700 text-lg lg:text-xl leading-none lg:leading-none">Not sure<br> where to start?</p>
            {% picture "misc/jelly-character-book-map.svg", "", "w-full h-auto mx-auto px-4 mt-6 mb-2 transition group-hover:-rotate-3 group-hover:scale-110" %}
            <p class="mt-1 text-xs lg:text-sm">Click here to learn which of our solutions is right for you.</p>
            </a>
          </div>

        </div>
      </div>
    </li>



    <li class="flex items-center"><a class="nav-link" href="/blog/">Insights</a></li>

    <li class="flex items-center"><a class="nav-link" href="/about/">About</a></li>

    <li class="flex items-center"><a class="nav-link" href="/form/demo/">Demos</a></li>
    {# <a class="whitespace-nowrap rounded-full bg-gradient-to-br from-black to-blue-600 px-4 py-2.5 text-sm font-light text-white ring-2 ring-transparent ring-offset-2 ring-offset-white transition hover:from-epl-dark hover:to-blue-600 hover:ring-blue-500" href="/form/demo/">View Demos</a> #}

    <li class="flex items-center"><a class="nav-link" href="/contact/">Contact</a></li>

    <li class="flex items-center -ml-2"><a class="fill-epl hover:fill-black" href="#" title="Search">{% svg "menu--search", "h-5 aspect-square" %}</a></li>

  </ul>
</div>
