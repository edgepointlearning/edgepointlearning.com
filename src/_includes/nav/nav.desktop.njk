<div class="sticky top-0 z-40 hidden w-full px-4 transition-all bg-white shadow-md md:block xl:px-0">
  <ul class="flex items-stretch h-16 max-w-5xl gap-8 mx-auto">
    <li class="flex items-center flex-auto">
      <a href="/" class="" title="Home">
        {% svg "logo--epl-e", "h-8 aspect-square mg:hidden fill-epl" %} 
        {% svg "logo--epl-horizontal", "w-full md:w-[200px] lg:w-[220px] aspect-[358/47] hidden mg:block" %}
      </a>
    </li>

    <li class="flex items-center" x-data="{showChildren:false}" @click.away="showChildren=false">
      <a href="" class="nav-link" @click.prevent="showChildren=!showChildren">Solutions{% svg "menu--expand-down", "h-4 mt-0.5 aspect-square" %}</a>

      {% include 'nav/nav.background.html' %}

      <div
        class="absolute left-0 w-full max-w-full bg-white shadow-md top-16"
        x-cloak
        x-show="showChildren"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 -translate-y-3"
        x-transition:enter-end="opacity-100 translate-y-0"
      >
        <div class="flex flex-wrap max-w-5xl px-2 mx-auto place-content-center">
          
          {% for link in solutions %}
            {{ component('megamenu.vert', { link: link }) }}
          {% endfor %}

          <div class="flex flex-col order-last w-full mt-2 mb-8 place-content-center">
            <p class="font-medium text-center ">Not sure where to start? <a href="/solutions/" class="font-normal underline decoration-teal-500 decoration-2 text-epl hover:text-black hover:decoration-black">Explore all of our solutions.</a></p>
          </div>

        </div>
      </div>
    </li>

    <li class="flex items-center">
      <a class="nav-link" href="/blog/">Insights</a>
    </li>

    <li class="flex items-center" x-data="{showChildren:false}" @click.away="showChildren=false">
      <a href="" class="nav-link" @click.prevent="showChildren=!showChildren">About us{% svg "menu--expand-down", "h-4 mt-0.5 aspect-square" %}</a>

      {% include 'nav/nav.background.html' %}

      <div
        class="absolute left-0 w-full max-w-full bg-white shadow-md top-16"
        x-cloak
        x-show="showChildren"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 -translate-y-3"
        x-transition:enter-end="opacity-100 translate-y-0"
      >
        <div class="flex flex-wrap max-w-5xl px-2 pb-2 mx-auto place-content-center">
          {% for link in about %}
            {{ component('megamenu.vert', { link: link }) }}
          {% endfor %}
        </div>
      </div>
    </li>

    <li class="flex items-center">
      <a class="nav-link" href="/contact/">Contact</a>
    </li>

    <li class="flex items-center">
      <a class="whitespace-nowrap rounded-full bg-gradient-to-br from-black to-blue-600 px-4 py-2.5 text-sm font-light text-white ring-2 ring-transparent ring-offset-2 ring-offset-white transition hover:from-epl-dark hover:to-blue-600 hover:ring-blue-500" href="/form/demo/">Book a consultation</a>
    </li>

    <li class="flex items-center -ml-2">
      <a class="transition fill-epl hover:fill-black" href="#" title="Search">{% svg "menu--search", "h-6 aspect-square" %}</a>
    </li>
  </ul>
</div>
