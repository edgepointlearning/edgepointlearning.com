<div class="sticky top-0 z-40 hidden w-full bg-white px-4 shadow-md transition-all md:block xl:px-0">
  <ul class="mx-auto flex h-16 max-w-5xl items-stretch gap-8">
    <li class="flex flex-auto items-center">
      <a href="/" class="" title="Home">
        {% svg "logo--epl-e", "h-8 aspect-square mg:hidden fill-epl" %} 
        {% svg "logo--epl-horizontal", "w-full md:w-[200px] lg:w-[220px] aspect-[358/47] hidden mg:block" %}
      </a>
    </li>

    <li class="flex items-center" x-data="{showChildren:false}" @click.away="showChildren=false">
      <a href="" class="nav-link" @click.prevent="showChildren=!showChildren">Solutions{% svg "menu--expand-down", "h-4 mt-0.5 aspect-square" %}</a>

      <div
        class="absolute left-0 top-16 h-screen w-screen bg-black/50 backdrop-blur-sm"
        style="display: none"
        x-show="showChildren"
        @click.prevent="showChildren=!showChildren"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
      ></div>

      <div
        class="absolute left-0 top-16 w-screen max-w-full bg-white shadow-md"
        style="display: none"
        x-show="showChildren"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 -translate-y-3"
        x-transition:enter-end="opacity-100 translate-y-0"
      >
        <div class="mx-auto flex max-w-5xl flex-wrap place-content-center px-2 pb-2">
          <div class="order-last flex w-1/2 max-w-sm p-6 lg:w-2/3 lg:max-w-none">
            <div class="w-12 flex-none">{% svg "handdrawn--decision-color", "aspect-square opacity-70" %}</div>
            <div class="pl-1 text-slate-700">
              <p class="text-sm font-medium lg:text-base">Not sure where to start?</p>
              <div class="my-1.5 h-[1px] w-12 bg-slate-300 lg:hidden"></div>
              <p class="max-w-sm text-xs lg:mt-1.5 lg:text-sm">
                Lorem ipsum dolor sit, amet consectetur adipisicing elit.
                <a href="/solutions/" class="font-medium text-epl underline hover:text-black">Explore all of our solutions.</a>
              </p>
            </div>
          </div>

          {% for link in solutions %}
            {{ component('megamenu.solutions', { link: link }) }}
          {% endfor %}
        </div>
      </div>
    </li>

    <li class="flex items-center">
      <a class="nav-link" href="/blog/">Insights</a>
    </li>

    <li class="flex items-center" x-data="{showChildren:false}" @click.away="showChildren=false">
      <a href="" class="nav-link" @click.prevent="showChildren=!showChildren">About Us{% svg "menu--expand-down", "h-4 mt-0.5 aspect-square" %}</a>

      <div
        class="absolute left-0 top-16 h-screen w-screen bg-black/50 backdrop-blur-sm"
        style="display: none"
        x-show="showChildren"
        @click.prevent="showChildren=!showChildren"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
      ></div>

      <div
        class="absolute left-0 top-16 w-screen max-w-full bg-white shadow-md"
        style="display: none"
        x-show="showChildren"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 -translate-y-3"
        x-transition:enter-end="opacity-100 translate-y-0"
      >
        <div class="mx-auto flex max-w-5xl flex-wrap place-content-center px-2 pb-2">
          {% for link in about %}
            {{ component('megamenu.about', { link: link }) }}
          {% endfor %}
        </div>
      </div>
    </li>

    <li class="flex items-center">
      <a class="nav-link" href="/contact/">Contact</a>
    </li>

    <li class="flex items-center">
      <a class="whitespace-nowrap rounded-full bg-gradient-to-br from-black to-blue-600 px-4 py-2.5 text-sm font-light text-white ring-2 ring-transparent ring-offset-2 ring-offset-white transition hover:from-epl-dark hover:ring-blue-500" href="/form/demo/">Book A Consultation</a>
    </li>

    <li class="-ml-2 flex items-center">
      <a class="fill-epl transition hover:fill-black" href="#" title="Search">{% svg "menu--search", "h-6 aspect-square" %}</a>
    </li>
  </ul>
</div>
