<div class="md:hidden sticky top-0 z-30 bg-white shadow-md">
  <ul class="place-items-center flex justify-between w-full h-12">

    <li x-data="{showChildren:false}" @click.away="showChildren=false, bsd(false)">
      <a href="" @click.prevent="showChildren=!showChildren" title="Open Menu">
        <div x-show="!showChildren" x-on:click="bsd(true)" class="grid place-items-center w-12 h-12">{% svg "menu--menu", "h-5 aspect-square fill-epl" %}</div>
        <div x-show="showChildren" x-on:click="bsd(false)" class="grid place-items-center w-12 h-12">{% svg "menu--close", "h-5 aspect-square" %}</div>
      </a>

      <nav
        @click.away="showChildren=false" x-show="showChildren"
        class="
          absolute left-0 w-full h-screen
          grid justify-center items-start
          bg-white
        ">
        <ul class="grid grid-cols-2 gap-x-12 gap-y-8 pl-5 pt-4">
          {% for item in navigation %}
            <li class="text-epl text-sm font-semibold uppercase whitespace-nowrap {{item.clss}}"><a href="{{item.link}}">{{item.name}}</a></li>
          {% endfor %}
        </ul>
      </nav>

    </li>

    <li><a href="/" title="Home">{% svg "logo--epl-horizontal", "h-5 aspect-[358/47]" %}</a></li>
    <li class="place-items-center flex justify-center w-12 h-12"><a href="" title="Search">{% svg "menu--search", "h-5 aspect-square fill-epl" %}</a></li>

  </ul>
</div>
