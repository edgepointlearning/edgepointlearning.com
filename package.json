{
  "scripts": {
    "clean": "rimraf _dist",

    "dev:eleventy":   "npx eleventy --serve",
    "build:eleventy": "ELEVENTY_PRODUCTION=true eleventy",
    
    "dev:postcss":   "postcss src/css/styles.css -o _dist/css/styles.css --config ./postcss.config.js -w",    
    "build:postcss": "postcss src/css/styles.css -o _dist/css/styles.css --config ./postcss.config.js",    

    "start": "npm-run-all --parallel dev:*",
    "build": "NODE_ENV=production npm-run-all build:postcss build:eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-img": "^1.1.0",
    "@quasibit/eleventy-plugin-sitemap": "^2.1.5",
    "@tailwindcss/typography": "^0.5.2",
    "alpinejs": "^3.9.1",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "eleventy-plugin-metagen": "^1.6.0",
    "eleventy-plugin-svg-sprite": "^1.2.2",
    "netlify-plugin-cache": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.22"
  }
}
