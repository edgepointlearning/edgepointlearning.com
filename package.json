{
  "scripts": {
    "dev:eleventy": "cross-env ELEVENTY_ENV=dev npx eleventy --serve --incremental",
    "build:eleventy": "cross-env ELEVENTY_ENV=prod MY_ENVIRONMENT=production eleventy",

    "dev:postcss": "postcss src/assets/css/styles.css -o _dist/css/styles.css --config ./postcss.config.js -w",
    "build:postcss": "postcss src/assets/css/styles.css -o _dist/css/styles.css --config ./postcss.config.js",
    
    "dev": "cross-env run-p dev:*",
    "build": "cross-env NODE_ENV=production run-s build:*"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-canary.12",
    "@11ty/eleventy-img": "^2.0.1",
    "@11tyrocks/eleventy-plugin-emoji-readtime": "^1.0.1",
    "@quasibit/eleventy-plugin-sitemap": "^2.1.5",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.2",
    "alpinejs": "^3.9.1",
    "clipboard": "^2.0.11",
    "cross-env": "^7.0.3",
    "eleventy-plugin-metagen": "^1.6.0",
    "eleventy-plugin-svg-sprite": "^1.2.2",
    "m": "^1.7.0",
    "markdown-it-attrs": "^4.1.3",
    "markdown-it-link-attributes": "^4.0.0",
    "netlify-plugin-cache": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "postcss-lightningcss": "^0.6.0",
    "rimraf": "^3.0.2",
    "sharer.js": "^0.5.1",
    "tailwindcss": "^3.0.22"
  },
  "browserslist": [
    "defaults"
  ]
}
